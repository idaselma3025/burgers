

<div class="container">
  <h1>Ida Burger!</h1>
  <img src="/assets/images/catburger.jpg" height="150" width="150">
  <div class="row">
    <div class="col-md-6">
    <h2>Burgers that have not been tried!</h2>
<ul class = "noteaten">
  {{#each burgers}}
    {{#unless this.devoured}}
  {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

</div>

  <div class="col-md-6">
<h2>Burgers that have been tried!</h2>

<ul class="eaten">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<div class = "row">
  <div class="col-md-12">
<h2>Create A Burger</h2>
<form class="create-form">

  <div class="form-group">
    <!-- <label for="ca">Burger Name:</label> -->
    <textarea type="text" id="ca" name="name"></textarea>
  </div>

